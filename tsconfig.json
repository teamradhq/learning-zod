{
  "baseUrl": ".",
  "transpileOnly": true,
  "include": [
    "*.ts",
    "src/**/*.ts",
    "init/**/*.ts",
    "src/**/*.cts",
    "__mocks__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cdk.out"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [
      "./src/env.d.ts",
      "./node_modules/@types"
    ],
    "paths": {
      "@src/*": ["./src/*"],
    }
  }
}
